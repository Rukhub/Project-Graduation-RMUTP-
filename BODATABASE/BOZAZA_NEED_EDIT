app.post('/api/upload', upload.single('image'), (req, res) => {
    if (!req.file) return res.status(400).json({ message: "à¸à¸£à¸¸à¸“à¸²à¹€à¸¥à¸·à¸­à¸à¹„à¸Ÿà¸¥à¹Œà¸ à¸²à¸ž" });
    const host = req.get('host'); 
    const protocol = req.protocol;
    const imageUrl = `${protocol}://${host}/uploads/${req.file.filename}`;
    res.json({ success: true, image_url: imageUrl });
});

app.post('/api/reports', (req, res) => {
    const { asset_id, reporter_name, issue_detail, image_url } = req.body; 
    const sqlReport = "INSERT INTO reports (asset_id, reporter_name, issue_detail, image_url) VALUES (?, ?, ?, ?)";
    const sqlUpdateAsset = "UPDATE assets SET status = 'à¸Šà¸³à¸£à¸¸à¸”', reporter_name = ?, issue_detail = ?, report_date = NOW() WHERE asset_id = ?";

    db.query(sqlReport, [asset_id, reporter_name, issue_detail, image_url], (err) => {
        if (err) return res.status(500).json({ message: "à¸šà¸±à¸™à¸—à¸¶à¸à¸£à¸²à¸¢à¸‡à¸²à¸™à¹„à¸¡à¹ˆà¸ªà¸³à¹€à¸£à¹‡à¸ˆ", error: err });
        db.query(sqlUpdateAsset, [reporter_name, issue_detail, asset_id], (err2) => {
            if (err2) return res.status(500).json({ message: "à¸­à¸±à¸›à¹€à¸”à¸•à¸ªà¸–à¸²à¸™à¸°à¹„à¸¡à¹ˆà¸ªà¸³à¹€à¸£à¹‡à¸ˆ" });
            res.json({ success: true, message: "à¹à¸ˆà¹‰à¸‡à¸‹à¹ˆà¸­à¸¡à¹€à¸£à¸µà¸¢à¸šà¸£à¹‰à¸­à¸¢!" });
        });
    });
});

// API à¸ªà¸³à¸«à¸£à¸±à¸šà¸”à¸¶à¸‡à¸›à¸£à¸°à¸§à¸±à¸•à¸´à¸à¸²à¸£à¹à¸ˆà¹‰à¸‡à¸‹à¹ˆà¸­à¸¡à¸‚à¸­à¸‡à¸„à¸£à¸¸à¸ à¸±à¸“à¸‘à¹Œà¸£à¸²à¸¢à¹€à¸„à¸£à¸·à¹ˆà¸­à¸‡ (à¹€à¸žà¸·à¹ˆà¸­à¹ƒà¸«à¹‰à¸£à¸±à¸à¸”à¸¶à¸‡à¸£à¸¹à¸› B à¹„à¸›à¹‚à¸Šà¸§à¹Œà¹„à¸”à¹‰)
