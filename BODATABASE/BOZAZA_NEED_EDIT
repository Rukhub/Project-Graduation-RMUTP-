        if (err) {
            console.error("âŒ SQL Report Fetch Error:", err);
            return res.status(500).json(err);
        }
        res.json(results); // à¸ªà¹ˆà¸‡à¸£à¸²à¸¢à¸à¸²à¸£à¹à¸ˆà¹‰à¸‡à¸‹à¹ˆà¸­à¸¡à¸—à¸±à¹‰à¸‡à¸«à¸¡à¸”à¸—à¸µà¹ˆà¸¡à¸µ image_url (à¸£à¸¹à¸› B) à¸à¸¥à¸±à¸šà¹„à¸›à¹ƒà¸«à¹‰à¸£à¸±à¸
    });
});

