    const { role } = req.body; // à¸£à¸±à¸šà¸„à¹ˆà¸² 'admin' à¸«à¸£à¸·à¸­ 'user'
    const sql = "UPDATE users SET role = ? WHERE user_id = ?";
    db.query(sql, [role, req.params.id], (err) => {
        if (err) return res.status(500).json({ message: "Database error" });
        res.json({ success: true, message: "à¹€à¸›à¸¥à¸µà¹ˆà¸¢à¸™à¸ªà¸´à¸—à¸˜à¸´à¹Œà¸à¸²à¸£à¹ƒà¸Šà¹‰à¸‡à¸²à¸™à¹€à¸£à¸µà¸¢à¸šà¸£à¹‰à¸­à¸¢!" });
    });
});

