app.post('/api/locations', (req, res) => {
    const { floor, room_name } = req.body;
    db.query("INSERT INTO locations (floor, room_name) VALUES (?, ?)", [floor, room_name], (err, result) => {
        if (err) return res.status(500).json({ success: false });
        res.json({ success: true, location_id: result.insertId });
    });
});

// ==========================================
// --- 9. API: Check Logs (à¸šà¸±à¸™à¸—à¸¶à¸à¸à¸²à¸£à¸•à¸£à¸§à¸ˆà¸ªà¸­à¸šà¸­à¸¸à¸›à¸à¸£à¸“à¹Œ) ---
// ==========================================

app.post('/api/check-logs', (req, res) => {
    // 1. à¸£à¸±à¸š image_url à¹€à¸žà¸´à¹ˆà¸¡à¹€à¸‚à¹‰à¸²à¸¡à¸²à¸ˆà¸²à¸à¸à¸±à¹ˆà¸‡à¸£à¸±à¸
    const { asset_id, checker_id, result_status, remark, image_url } = req.body;

    // 2. à¹€à¸žà¸´à¹ˆà¸¡ image_url à¸¥à¸‡à¹ƒà¸™à¸„à¸³à¸ªà¸±à¹ˆà¸‡ SQL (à¸•à¹‰à¸­à¸‡à¸£à¸±à¸™ ALTER TABLE à¹ƒà¸™ DB à¸à¹ˆà¸­à¸™à¸™à¸°à¹‚à¸š!)
    const sqlLog = "INSERT INTO check_logs (asset_id, checker_id, result_status, remark, image_url, check_date) VALUES (?, ?, ?, ?, ?, NOW())";
    
    const sqlUpdateAsset = "UPDATE assets SET status = ?, checker_name = ?, last_check_date = NOW() WHERE asset_id = ?";

    // 3. à¹ƒà¸ªà¹ˆ image_url à¹€à¸‚à¹‰à¸²à¹„à¸›à¹ƒà¸™ array à¸•à¸±à¸§à¸—à¸µà¹ˆ 5
    db.query(sqlLog, [asset_id, checker_id, result_status, remark, image_url], (err) => {
        if (err) {
            console.error("âŒ SQL Log Error:", err);
            return res.status(500).json({ message: "à¸šà¸±à¸™à¸—à¸¶à¸à¸›à¸£à¸°à¸§à¸±à¸•à¸´à¸à¸²à¸£à¸•à¸£à¸§à¸ˆà¸ªà¸­à¸šà¹„à¸¡à¹ˆà¸ªà¸³à¹€à¸£à¹‡à¸ˆ", error: err });
        }

        db.query(sqlUpdateAsset, [result_status, checker_id, asset_id], (err2) => {
            if (err2) {
                console.error("âŒ SQL Update Asset Error:", err2);
                return res.status(500).json({ message: "à¸­à¸±à¸›à¹€à¸”à¸•à¸ªà¸–à¸²à¸™à¸°à¸—à¸µà¹ˆà¸•à¸±à¸§à¸„à¸£à¸¸à¸ à¸±à¸“à¸‘à¹Œà¹„à¸¡à¹ˆà¸ªà¸³à¹€à¸£à¹‡à¸ˆ", error: err2 });
            }
            
            res.json({ 
                success: true, 
                message: "à¸šà¸±à¸™à¸—à¸¶à¸à¸à¸²à¸£à¸•à¸£à¸§à¸ˆà¸ªà¸­à¸šà¹à¸¥à¸°à¸­à¸±à¸›à¹€à¸”à¸•à¸ªà¸–à¸²à¸™à¸°à¸„à¸£à¸¸à¸ à¸±à¸“à¸‘à¹Œà¹€à¸£à¸µà¸¢à¸šà¸£à¹‰à¸­à¸¢!" 
            });
        });
    });
});

// API à¸ªà¸³à¸«à¸£à¸±à¸šà¸”à¸¶à¸‡à¸›à¸£à¸°à¸§à¸±à¸•à¸´à¸à¸²à¸£à¸•à¸£à¸§à¸ˆà¸ªà¸­à¸š à¸žà¸£à¹‰à¸­à¸¡à¸ˆà¸­à¸¢à¸Šà¸·à¹ˆà¸­à¸„à¸™à¸•à¸£à¸§à¸ˆà¸¡à¸²à¸ˆà¸²à¸à¸•à¸²à¸£à¸²à¸‡ users
app.get('/api/assets/:assetId/check-logs', (req, res) => {
    // à¹ƒà¸Šà¹‰ LEFT JOIN à¹€à¸žà¸·à¹ˆà¸­à¸”à¸¶à¸‡à¸Šà¸·à¹ˆà¸­ fullname à¸¡à¸²à¸ˆà¸²à¸à¸•à¸²à¸£à¸²à¸‡ users à¹‚à¸”à¸¢à¹€à¸—à¸µà¸¢à¸šà¸ˆà¸²à¸ checker_id
    const sql = `
        SELECT cl.*, u.fullname AS checker_name 
        FROM check_logs cl
        LEFT JOIN users u ON cl.checker_id = u.user_id
        WHERE cl.asset_id = ? 
        ORDER BY cl.check_date DESC
    `;
    db.query(sql, [req.params.assetId], (err, results) => {
        if (err) {
            console.error("âŒ Fetch Logs Error:", err);
            return res.status(500).json(err);
        }
        res.json(results); // à¸•à¸­à¸™à¸™à¸µà¹‰à¸£à¸±à¸à¸ˆà¸°à¹„à¸”à¹‰ checker_name à¹€à¸›à¹‡à¸™ "à¹‚à¸š à¸œà¸¹à¹‰à¸”à¸¹à¹à¸¥à¸£à¸°à¸šà¸š" à¹„à¸›à¹ƒà¸Šà¹‰à¹à¸¥à¹‰à¸§à¸„à¸£à¸±à¸š!
    });
});

app.listen(3000, () => {
    console.log('âœ… Backend Ready: http://localhost:3000');
});
